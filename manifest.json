{
  "manifest_version": 2,
  "name": "Nice Twitter",
  "version": "1.0",

  "description": "An extension to hide the number of likes, retweets, etc on twitter",

  "icons": {
    "48": "images/nice-twitter-logo-48.png",
    "96": "images/nice-twitter-logo-96.png"
},

  "content_scripts": [
      {
          "matches": ["*://*.twitter.com/home*"],
          "js": ["nice-twitter.js"]
      }
  ]
}